<div class="ui centered cards">
  {{#each compilations}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
      <div class="content">
      <h class="h2"> <a id="header">
         {{uppercase title}}</a>
        </h>
        
      </div>
      <div class="extra content">
        <a href="/compilation/{{id}}" class="ui icon button">
          <i class="icon folder open"></i>
        </a>
        <a href="/dashboard/deletecompilation/{{id}}" class="ui icon button">
          <i class="icon trash"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>